        "description": "  註冊  <ul>  <li>密碼產生 Token 後至其他 users API 使用</li>  <li>取得 Token 至上方 Authorize 按鈕以格式 <code>Bearer ＜Token＞</code> 加入設定，swagger 文件中鎖頭上鎖表示登入，可使用登入權限。</li>  <li>欄位 <code>\"gender\"</code> 只能接受 <code>\"male\", \"female\"</code>。</li>  </ul>  ",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": false,
            "description": "",
            "schema": {
              "type": "object",
              "properties": {
                "userName": {
                  "type": "string",
                  "example": "小明"
                },
                "email": {
                  "type": "string",
                  "example": "min-@mail.com"
                },
                "password": {
                  "type": "string",
                  "example": "12345678"
                },
                "userPhoto": {
                  "type": "string",
                  "example": "https://avatars.githubusercontent.com/u/42748910?v=4"
                },
                "gender": {
                  "type": "string",
                  "example": "male"
                }
              },
              "required": [
                "userName",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "註冊資訊",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "success"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "token"
                    },
                    "userName": {
                      "type": "string",
                      "example": "小明"
                    }
                  }
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
